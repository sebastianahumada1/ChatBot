{
  "version": 2,
  "rewrites": [
    {
      "source": "/webhook",
      "destination": "/api/webhook"
    },
    {
      "source": "/send-message",
      "destination": "/api/send-message"
    },
    {
      "source": "/ai-config",
      "destination": "/api/ai-config"
    },
    {
      "source": "/conversations",
      "destination": "/api/conversations"
    }
  ],
  "functions": {
    "api/webhook.js": {
      "maxDuration": 25
    },
    "api/send-message.js": {
      "maxDuration": 25
    },
    "api/ai-config.js": {
      "maxDuration": 10
    },
    "api/conversations.js": {
      "maxDuration": 10
    }
  }
}
